{namespace MetalQuartzIcon}

/**
 * This renders an icon element based on the Quartz Icon definition.
 *
 * @param? elementClasses
 * @param? spritemap
 * @param? symbol
 */
{template .render}
	{if isNonnull($symbol) and isNonnull($spritemap)}
		<svg aria-hidden="true" class="lexicon-icon lexicon-icon-{$symbol}">
			<use xlink:href="{$spritemap}#{$symbol}" />
		</svg>
	{elseif $elementClasses}
		<span aria-hidden="true"></span>
	{/if}
{/template}